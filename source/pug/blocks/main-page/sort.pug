-
  const radio = [
    {
      id: "expensive",
      name: "Сначала дорогие"
    },
    {
      id: "cheap",
      name: "Сначала недорогие"
    },
    {
      id: "raiting",
      name: "Сначала популярные"
    },
    {
      id: "date",
      name: "Сначала новые"
    },
  ]

form(action="#").catalog-block__sort.sort
  button.h3.sort__button(type="button")
    span Сначала дорогие
    +svg("triangle",8,6)
  .sort__popup
    each item,index in radio
      label
        input.visually-hidden(id=item.id type="radio" name="sort" checked=!index data-name=item.name)
        span.h3.sort__name=item.name
